package model;

/**
 * 读者实体类
 * @author JenaKJZ
 *
 */

public class Readers extends Users{
	public String borrow_book_num;
	public String balance;
	public String address;
	public String company;
	
	public Readers() 
	{
		super();
		// TODO Auto-generated constructor stub
	}

	public Readers(String borrow_book_num, String balance, String address, String company) 
	{
		super();
		this.borrow_book_num = borrow_book_num;
		this.balance = balance;
		this.address = address;
		this.company = company;
	}

	public String getBorrow_book_num() {
		return borrow_book_num;
	}

	public void setBorrow_book_num(String borrow_book_num) {
		this.borrow_book_num = borrow_book_num;
	}

	public String getBalance() {
		return balance;
	}

	public void setBalance(String balance) {
		this.balance = balance;
	}

	public String getAddress() {
		return address;
	}

	public void setAddress(String address) {
		this.address = address;
	}

	public String getCompany() {
		return company;
	}

	public void setCompany(String company) {
		this.company = company;
	}
	
	
	public void PrintReader() {
		System.out.println("Your id: "+this.user_id);
		System.out.println("Your name: "+this.user_name);
		System.out.println("How many books you borrow: "+this.borrow_book_num);
		System.out.println("Your balance: "+this.balance);
		System.out.println("Your address: "+this.address);
		System.out.println("Your company: "+this.company);
	}
}
